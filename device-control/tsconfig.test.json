  "compilerOptions": {
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "types": ["jest", "node", "webdriverio"],
    "typeRoots": ["./node_modules/@types", "./node_modules/@wdio/types"],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
} 